{
  "compilerOptions": {
    // Module
    "module": "ESNext",
    "moduleResolution": "Node10",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "verbatimModuleSyntax": true,
    // Strict
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": null,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Others
    "declaration": true,
    "declarationMap": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
